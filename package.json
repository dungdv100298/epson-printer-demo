{
  "name": "thermal-printer-demo",
  "version": "1.0.0",
  "description": "Electron app for thermal printer management and receipt printing",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "homepage": "./",
  "dependencies": {
    "electron": "^22.3.27",
    "electron-is-dev": "^2.0.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-serialport": "^3.0.0-alpha.4",
    "escpos-usb": "^3.0.0-alpha.4",
    "iconv-lite": "^0.6.3",
    "jimp": "^0.22.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^7.6.0",
    "electron-builder": "^24.6.3",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.thermal-printer.demo",
    "productName": "Thermal Printer Demo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
